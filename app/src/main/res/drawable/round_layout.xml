<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <!-- 圓角幅度設定值 -->
    <corners
        android:radius="20dip" />

    <!-- 框內底部顏色 -->
    <solid
        android:color="#000000" />

    <!-- 畫面顏色漸層、角度 -->
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#FFFFFF"
        android:angle="315" />
</shape>