<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reflistadd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEEC6">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/refaddtitle"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="#FFF9E9"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myrefadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增冰箱清單"
            android:textColor="#884800"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/refaddtitle"
            app:layout_constraintEnd_toEndOf="@+id/refaddtitle"
            app:layout_constraintStart_toStartOf="@+id/refaddtitle"
            app:layout_constraintTop_toTopOf="@+id/refaddtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>