<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.life">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="label">
        <activity android:name=".Setting.LineNotifyActivity"></activity>
        <activity android:name=".Scan.QRCodeScanActivity" />
        <activity android:name=".Refrigerator.ChangeRefActivity" />
        <activity android:name=".Vehicle.MyVehicleActivity" />
        <activity android:name=".Setting.VehicleSetActivity" />
        <activity android:name=".Setting.NotifySetActivity" />
        <activity android:name=".Group.GroupDetailActivity" />
        <activity android:name=".Refrigerator.EditReflistActivity" />
        <activity android:name=".Setting.KindSetActivity" />
        <activity android:name=".Setting.EditpassActivity" />
        <activity android:name=".Setting.Userset" />
        <activity android:name=".ShopList.ShopaddActivity" />
        <activity android:name=".Refrigerator.RefaddActivity" />
        <activity android:name=".Login.RegisterActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.LoginActivity" />
        <receiver android:name=".NotificationReceiver"/>
    </application>

</manifest>